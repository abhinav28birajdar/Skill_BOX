# Environment Configuration for SkillBox
# Copy this file to .env and fill in your actual values

# Supabase Configuration
EXPO_PUBLIC_SUPABASE_URL=your_supabase_project_url_here
EXPO_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# JWT Secret (for server-side operations)
SUPABASE_JWT_SECRET=your-jwt-secret-here

# Service Role Key (for admin operations)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Database Configuration
DATABASE_URL=postgresql://postgres:password@db.your-project.supabase.co:5432/postgres

# OAuth Providers
EXPO_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id
EXPO_PUBLIC_APPLE_CLIENT_ID=your-apple-client-id
EXPO_PUBLIC_FACEBOOK_APP_ID=your-facebook-app-id

# Storage Configuration
EXPO_PUBLIC_STORAGE_BUCKET=skillbox-storage

# Real-time Configuration
EXPO_PUBLIC_REALTIME_URL=wss://your-project.supabase.co/realtime/v1/websocket

# App Configuration
EXPO_PUBLIC_APP_URL=http://localhost:8081
EXPO_PUBLIC_WEB_URL=https://your-domain.com

# Development
NODE_ENV=development
EXPO_DEBUG=true

# Payment Processing (Optional)
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-key
PAYPAL_CLIENT_ID=your-paypal-client-id

# AI Services (Optional)
OPENAI_API_KEY=sk-your-openai-key

# Optional: Advanced Features
EXPO_PUBLIC_ENABLE_BIOMETRIC_AUTH=true
EXPO_PUBLIC_ENABLE_AR_VR=false
EXPO_PUBLIC_ENABLE_NEURAL_FEEDBACK=false

# Development Settings
EXPO_PUBLIC_DEBUG_MODE=true
EXPO_PUBLIC_API_TIMEOUT=10000

# Instructions:
# 1. Create a Supabase project at https://supabase.com
# 2. Copy your project URL and anon key from Settings > API
# 3. Get an OpenAI API key from https://platform.openai.com/api-keys
# 4. Rename this file to .env
# 5. Replace the placeholder values with your actual keys
# 6. Make sure .env is in your .gitignore file for security
