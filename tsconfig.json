{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": [
      "react-native",
      "expo",
      "node"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./app/*",
        "./components/*",
        "./constants/*",
        "./context/*",
        "./hooks/*",
        "./lib/*",
        "./services/*",
        "./types/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
